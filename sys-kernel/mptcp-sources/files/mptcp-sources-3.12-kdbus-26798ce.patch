+	size_t *memfds;
+	struct file **memfds_fp;
+	unsigned int memfds_count;
+
+	size_t fds;
+	struct file **fds_fp;
+	unsigned int fds_count;
+
+	u64 src_id;
+	u64 cookie;
+	u64 dst_name_id;
+};
