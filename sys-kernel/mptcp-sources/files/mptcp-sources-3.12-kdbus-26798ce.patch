+int kdbus_conn_drop_msg(struct kdbus_conn *conn)
+{
+	struct kdbus_conn_queue *queue;
+	int ret;
+
+	mutex_lock(&conn->lock);
+	if (unlikely(conn->ep->disconnected)) {
+		ret = -ECONNRESET;
